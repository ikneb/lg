{% extends 'base.html.twig' %}

{% block body %}
    <div style=" background: url({{ asset('img/bg-login.jpg') }}) !important;">
        <div class="container-fluid-full">
            <div class="row-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="logo">
                            <a href="login.html"><strong><img src="{{ asset('img/logo.png') }}" alt="Logo"></strong></a>
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="login-box">
                        <h2>Login to your account</h2>
                        {#  <form class="form-horizontal" action="index.html" method="post">#}
                        {{ form_start(form) }}

                        <div class="clearfix"></div>
                        <div class="input-prepend" title="Username">
                            <span class="add-on"><i class="halflings-icon user"></i></span>
                            {#<input class="input-large span10" name="username" id="username" type="text" placeholder="type login"/>#}
                            {{ form_row(form.username) }}
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend" title="mail">
                            <span class="add-on"><i class="halflings-icon home"></i></span>
                            {#<input class="input-large span10" name="username" id="username" type="text" placeholder="type login"/>#}
                            {{ form_row(form.email) }}
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend" title="Password">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            {#<input class="input-large span10" name="password" id="password" type="password" placeholder="type Password"/>#}
                            {{ form_row(form.plainPassword.first) }}
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend" title="Password">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            {#<input class="input-large span10" name="password" id="password" type="password" placeholder="comfirm password"/>#}
                            {{ form_row(form.plainPassword.second) }}
                        </div>

                        <div class="clearfix"></div>
                        <div class="input-prepend" title="Name">
                            <span class="add-on"><i class="halflings-icon user"></i></span>
                            {#<input class="input-large span10" name="username" id="username" type="text" placeholder="type login"/>#}
                            {{ form_row(form.name) }}
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend" title="Lastname">
                            <span class="add-on"><i class="halflings-icon user"></i></span>
                            {#<input class="input-large span10" name="username" id="username" type="text" placeholder="type login"/>#}
                            {{ form_row(form.lastname) }}
                        </div>


                        <div class="button-login">
                            <button type="submit" class="btn btn-primary">SING UP</button>
                        </div>
                        <div class="clearfix"></div>
                        {{ form_end(form) }}
                    </div><!--/span-->
                </div><!--/row-->


            </div><!--/.fluid-container-->

        </div><!--/fluid-row-->
    </div>
{% endblock %}