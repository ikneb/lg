{% extends 'base.html.twig' %}

{% block body %}
        <div class="container-fluid-full">
            <div class="row-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="logo">
                            <a href="login.html"><strong><img src="{{ asset('img/resume_logo.png') }}" alt="Logo"></strong></a>
                        </div>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="login-box">
                        <h2>Login to your account</h2>
                        {{ form_start(form) }}
                            <div class="clearfix"></div>
                            <div class="input-prepend" title="Username">
                                <span class="add-on"><i class="halflings-icon user"></i></span>
                                {{ form_row(form.username) }}
                            </div>
                            <div class="clearfix"></div>
                            <div class="input-prepend" title="mail">
                                <span class="add-on"><i class="halflings-icon home"></i></span>
                                {{ form_row(form.email) }}
                            </div>
                            <div class="clearfix"></div>
                            <div class="input-prepend" title="Password">
                                <span class="add-on"><i class="halflings-icon lock"></i></span>
                                {{ form_row(form.plainPassword.first) }}
                            </div>
                            <div class="clearfix"></div>
                            <div class="input-prepend" title="Password">
                                <span class="add-on"><i class="halflings-icon lock"></i></span>
                                {{ form_row(form.plainPassword.second) }}
                            </div>

                            <div class="clearfix"></div>
                            <div class="input-prepend" title="Name">
                                <span class="add-on"><i class="halflings-icon user"></i></span>
                                {{ form_row(form.name) }}
                            </div>
                            <div class="clearfix"></div>
                            <div class="input-prepend" title="Lastname">
                                <span class="add-on"><i class="halflings-icon user"></i></span>
                                {{ form_row(form.lastname) }}
                            </div>
                            <div class="button-login">
                                <button type="submit" class="btn btn-primary">SING UP</button>
                            </div>
                            <div class="clearfix"></div>
                        {{ form_end(form) }}
                    </div><!--/span-->
                </div><!--/row-->

            </div><!--/.fluid-container-->

        </div><!--/fluid-row-->

{% endblock %}