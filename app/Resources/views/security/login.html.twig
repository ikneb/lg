 {% endblock %}

{% block body %}
<div style=" background: url({{ asset('img/bg-login.jpg') }}) !important;">
    <div class="container-fluid-full">
        <div class="row-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="logo">
                        <a href="login.html"><strong><img src="{{ asset('img/logo.png') }}" alt="Logo"></strong></a>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="login-box">
                    <h2>Login to your account</h2>
                    <form class="form-horizontal" action="{{ path('login') }}" method="post">
                        {% if error %}
                            <div class="error-massage">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                            <div class="input-prepend" title="Username">
                                <span class="add-on"><i class="halflings-icon user"></i></span>
                                <input class="input-large span10" name="_username" id="username" type="text" placeholder="username" value="{{ last_username }}"/>
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend" title="Password">
                                <span class="add-on"><i class="halflings-icon lock"></i></span>
                                <input class="input-large span10" name="_password" id="password" type="password" placeholder="password"/>
                            </div>
                            <div class="clearfix"></div>

                            <label class="remember" for="remember">
                                <input type="checkbox" id="remember" />Remember me</label>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <div class="button-login">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                            <div class="clearfix"></div>
                    </form>
                    <hr>
                    <h3>SING UP</h3>
                    <p>
                        No problem, <a href="#">click here</a> to get a SING UP.
                    </p>
                </div><!--/span-->
            </div><!--/row-->


        </div><!--/.fluid-container-->

    </div><!--/fluid-row-->
</div>
{% endblock %}
